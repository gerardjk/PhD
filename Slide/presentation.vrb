            \begin{lstlisting}[language=Python, caption=Core Consensus Algorithm]
def consensus(value, nodes):
    # Phase 1: Propose
    proposals = broadcast(value, nodes)

    # Phase 2: Vote
    votes = collect_votes(proposals)
    if len(votes) > 2*f + 1:
        # Phase 3: Commit
        return commit(votes)
    else:
        return retry()
            \end{lstlisting}
